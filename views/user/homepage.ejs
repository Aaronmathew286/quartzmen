            function toggleWishlist(icon, event) {
    event.preventDefault(); 

    const productId = icon.getAttribute('data-product-id');
    const isLiked = icon.classList.contains('liked');
    const url = isLiked ? `/wishlist/remove/${productId}` : `/wishlist/add/${productId}`;
    const method = 'POST';

    fetch(url, { method })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                icon.classList.toggle('liked');
                if (icon.classList.contains('liked')) {
                    icon.classList.add('fas');
                    icon.classList.remove('far');
                } else {
                    icon.classList.add('far');
                    icon.classList.remove('fas');
                }
            } else {
                console.error('Failed to update wishlist');
            }
        })
        .catch(error => console.error('Error:', error));
}

            document.getElementById('searchForm').addEventListener('submit', function (e) {
                e.preventDefault();
                const query = this.query.value;  

                fetch(`/search?query=${encodeURIComponent(query)}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            displaySearchResults(data.products);
                        } else {
                            alert('No products found');
                        }
                    })
                    .catch(error => console.error('Error:', error));
            });


            function displaySearchResults(products) {
                const modalBody = document.querySelector('.modal-body');
                modalBody.innerHTML = ''; 

                products.forEach(product => {
                    const productCard = `
                <div class="col-md-3">
                    <a href="/productdetail/${product._id}" style="text-decoration: none; color: inherit;">
                        <div class="card">
                            <div class="card-img-top position-relative">
                                <!-- Toggle heart icon based on wishlist status -->
                                <i class="${product.wishlist ? 'fas fa-heart liked' : 'far fa-heart'}"
                                    data-product-id="${product._id}" style="cursor: pointer;"
                                    onclick="toggleWishlist(this, event)">
                                </i>
                                <img src="/uploads/${product.image[0]}" alt="Product Image" class="card-img-top">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">${product.brand}</h5>
                                <p class="card-text-model">Model: ${product.name}</p>
                                <p class="card-text-price">₹${product.price.toFixed(2)}</p>
                            </div>
                        </div>
                    </a>
                </div>
            `;

                    modalBody.innerHTML += productCard;
                });

                $('#searchModal').modal('show'); // Show the modal with search results
            }

