<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Category Management</h2>

        <!-- Add Category Form -->
        <div class="card mb-4">
            <div class="card-header">
                Add New Category
            </div>
            <div class="card-body">
                <form id="addCategoryForm" action="/admin/editcategory/<%= categoryEdit._id %>" method="POST">
                    <div class="mb-3">
                        <label for="categoryName" class="form-label">Category Name</label>
                        <input type="text" class="form-control" id="categoryName" name="categoryName" value="<%= categoryEdit.categoryName %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="categoryDescription" class="form-label">Category Description</label>
                        <textarea class="form-control" id="categoryDescription" name="description" rows="3" required><%= categoryEdit.description %></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Category</button>
                </form>
                
            </div>
        </div>
        <% if (typeof errMessage!== 'undefined') { %>
            <div class="alert alert-danger Errormsg">
                <h3><%= errMessage %></h3>
            </div>
          <% } %>

        <!-- Categories List -->
 

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS for loading and deleting categories -->
    <script>
        function loadCategory(id, name, description) {
            document.getElementById('editCategoryId').value = id;
            document.getElementById('editCategoryName').value = name;
            document.getElementById('editCategoryDescription').value = description;
        }

        function deleteCategory(id) {
            if (confirm('Are you sure you want to delete this category?')) {
                // Add your delete logic here (e.g., an AJAX request to delete the category)
                alert('Category with ID ' + id + ' deleted.');
            }
        }
    </script>
</body>
</html>